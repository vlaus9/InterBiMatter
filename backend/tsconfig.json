{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": ["node", "express"]
  },
  "include": [
    "**/*",
    "types/*.d.ts"  
  ],
  "exclude": ["node_modules", "dist"]
}